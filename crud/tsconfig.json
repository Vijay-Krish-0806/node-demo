{
  "compilerOptions": {
    "target": "ES2020", // or later
    "module": "ESNext", // or "ES2020" for ESM
    "outDir": "./dist", // Output directory for compiled JS
    "rootDir": "./src", // Source directory
    "strict": true, // Recommended for type safety
    "esModuleInterop": true, // For compatibility with CommonJS
    "skipLibCheck": true,
    "moduleResolution": "node" // or "nodenext" for Node.js-specific resolution
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
